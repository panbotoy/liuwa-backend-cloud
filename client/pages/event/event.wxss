/* client/pages/event/event.wxss */
page {
  background: #F6F6F6;
}

.container {
  /* height: 100%; */
  width:100%; 
  /* height:2412rpx; */
   display: flex; 
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  padding: 20rpx 22rpx;
  box-sizing: border-box;
  font-size:12pt;
  /*color:#636363;*/
}

.title-image{
  width:100%;
  height:360rpx;
  
}
.title-image image{
  width:100%;
  height:100%;
}
.detail-container{
    background: #FFFFFF;
}
.info-container{
    margin-top:10px;
    background: #FFFFFF;
}
.application-container{
    margin-top:10px;
    margin-bottom:60px;
    background: #FFFFFF;
}
.title-text{
  font-size:15pt;
  font-weight: bold;
  padding:25rpx 10rpx;
  border-top:1px solid #969696;
  border-bottom:1px solid #969696;
  margin-top:50rpx;
  margin-bottom:40rpx;
}
view{
    color:#636363;
}

/**点赞和收藏数量**/
.like-save-count{
    width:100%;
    height:50rpx;
    line-height: 50rpx;
     margin-bottom:50rpx;
     text-align: center;
}
.like-save-count image{
    width:30rpx;
    height:30rpx;
    position: relative;
    top:5rpx;
}
.like-save-count view{

    /* width:33%; */
    height:100%;
    display: inline-block;
    /* float:left; */
    box-sizing: border-box;
    font-size: 10pt;
}
.like-save-count .like-count{
    text-align: right;
    padding-right:20rpx;
}
.like-save-count .save-count{
    text-align: left;
    padding-left:20rpx;
}
/**作者**/
.like-save-count view.author{
     text-align: right;
     padding-right:20rpx;
    font-size: 11pt;
    /* color:#7E5E48; */
}
.author image{
    width:80rpx;
    height:80rpx;
    border-radius: 50%;
    /* margin-top: 16rpx;  */
    vertical-align: middle;
}
/**菜单说明**/
.food-text{
  margin-top:10rpx;
  margin-bottom:20rpx;
  line-height: 150%;
  text-align:justify;
     /* text-align-last:justify; */
}
.food-text-detailed{
  font-size:10pt;
  color:#969696;
  margin-bottom:50rpx;
  text-align:justify;
  display:flex;
}

.food-text-detailed image{
  width:30px;
  height:30px;
  margin-right:5px;
}
.food-text-detailed text{
  flex:1;
}

.event-info .info {
  display: flex;
}
.event-info .info image {
  width: 20px;
  height: 20px;
  margin-right: 10px;
  opacity: 0.5;
}
.event-info .info text {
  font-size:12pt;
  flex: 1;
  margin-bottom:10px;
}

.food-time{
  width:100%;
  /* line-height: 180%; */
}
.food-time view{
 
  color:#969696;
   font-size:11pt; 
  /* line-height: 180%; */
}
.food-time view:first-child{
     width:40%;
  float:left;
}
.food-time view:last-child{
     width:60%;
  float:right;
  text-align: right;
}
.food-item::after{
  content:'';
  display:block;
  clear:both;
}

.food-item image{
  width:50rpx;
  height:50rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10px;
}
.food-item text {
  color:#969696;
}
.total-count {
  text-align:right;
  margin-top: 10px;
  color:#969696;
}

.food-listbox01{
  width:100%;
  height:auto;
}
.food-list-title{
  width:100%;
  margin:20rpx 0;
  text-align: center;
  font-size:12pt;
}
.food-listbox01 .food-item{
  width:100%;
  height:88rpx;
  line-height: 88rpx;
  border-bottom:1px solid #E2E2E2;
}
.food-listbox01 .food-item text:first-child{
  width:50%;
  float:left;
  text-align: left;
}
.food-listbox01 .food-item text:last-child{
  width:50%;
  float:right;
  text-align: right;
}
.food-listbox01 .food-item::after{
  content:'';
  display:block;
  clear:both;
}

/***做法步骤***/
.way-listbox{
    width:100%;
    height:auto;
}
.way-listbox .way-item{
    width:100%;
    line-height: 180%;
    margin-bottom:40rpx;
     text-align:justify;
     position: relative;
     /* text-indent: 3em; */
}
.way-item text{
    font-size: 24pt;
    padding-right:10rpx;
    color:#969696;
    font-weight: bold;
    position: relative;
    top:6rpx;
}
/***图片分享***/
.pic-listbox{
    width:100%;
    height:auto;
}
.pic-listbox .pic-item{
    width:50%;
    height:300rpx;
    float:left;
    position: relative;
}
.pic-item image{
    width:100%;
    height:100%;
    box-sizing: border-box;
    padding:10rpx;
}
.pic-item text{
    position: absolute;
    left:20rpx;
    top:20rpx;
    width:40rpx;
    height:40rpx;
    text-align: center;
    line-height: 40rpx;
    background:rgba(255,255,255,0.8);
    border-radius: 50%;
    color:#A37011;
    font-size: 11pt;
}
.pic-list::after{
    content: "";
    display: block;
    clear: both;
}

/**小窍门**/
.little-tip{
    width:100%;
    height:auto;
    margin-bottom:120rpx;
}
.tip-content{
    text-indent: 2em;
    /*color:#A7A7A7;*/
    text-align:justify;
}
.fixed-box{
    width:100%;
    height:100rpx;
    line-height: 100rpx;
    background:#09bb07;
    position: fixed;
    bottom:0;
    left:0;
    z-index: 100;
}
.fixed-box view{
    width:100%;
    height:100rpx;
    line-height: 100rpx;
    text-align: center;
    float:left;
    color:#fff;
    vertical-align: middle;
}
.fixed-box view image{
    width:48rpx;
    height:48rpx;
    padding-right:10rpx;
    /* vertical-align: middle; */
    position: relative;
    top:12rpx;

}
.fixed-box view.add{
    color: #A37011;
}
.fixed-box text{
    width:2rpx;
    height:60rpx;
    position: absolute;
    left:374rpx;
    top:20rpx;
    background:#fff;
    display: block;
}
.fixed-box text.textadd{
    background: #A37011;
}
.dModal{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.8);
  z-index: 999;
  padding-top: 45%;
}

/* component/popup.wxss */
.wx-popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}
.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #F6F6F6;
}
.wx-popup-title {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  font-size: 40rpx;
  border-bottom: 2rpx solid rgba(255, 0, 0, 0.404);
}
.wx-popup-con {
  margin: 60rpx 10rpx;
  text-align: center;
}
.wx-popup-btn {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}
.wx-popup-btn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30%;
  height: 88rpx;
  border: 2rpx solid #ccc;
  border-radius: 20rpx;
}
.con-row {
  display:flex;
  margin-bottom:10px;
}
.picker {
  flex:1;
  width:40px;
  background:#fff;
}
.pickerLabel {
  width:80px;
  margin-right:10px;
}