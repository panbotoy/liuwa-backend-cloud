.list {
  height: 100%;
  background: #FFFFFF;
  margin-top:10px;
  border-radius: 2%;
}

.list .item {
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
}

.list .item .poster {
  width: 256rpx;
  height: 256rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.list .item .meta {
  flex: 1;
}

.list .item .meta .title,
.list .item .meta .sub-title {
  display: block;
  margin-bottom: 15rpx;
}

.list .item .meta .title {
  font-size: 14pt;
}

.list .item .meta .sub-title {
  margin-top: 10rpx;
  font-size: 11pt;
  color: #888888;
}

.list .item .meta .artists {
  font-size: 24rpx;
  color: #999;
}

.list .item .rating text {
  display: inline-block;
  width: 40rpx;
  font-size: 16rpx;
  text-align: center;
  background-color: rgba(247, 75, 49, 0.904);
  color: #fff;
  padding: 10rpx;
  border-radius: 20rpx;
}

.list .tips {
  font-size: 28rpx;
  text-align: center;
  padding: 50rpx;
  color: #ccc;
}

.list .tips image,
.list .tips text {
  vertical-align: middle;
}

.list .tips image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.header {
  display: flex;
  justify-content: center;
  border-bottom: 1rpx solid #ccc;
}


.header text {
  padding: 20rpx 40rpx;
  color: #999;
  font-size: 38rpx;
  text-align: center;
}